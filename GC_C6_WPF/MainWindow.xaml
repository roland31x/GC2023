<Window x:Class="GC_C6_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GC_C6_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800"
        WindowStartupLocation="CenterScreen">
    <Canvas x:Name="BigCanvas">
        <Canvas x:Name="MainCanvas" Height="800" Width="800">
            
        </Canvas>
        <TextBlock x:Name="Area1Box" Canvas.Left="10" TextWrapping="Wrap" Text="TextBlock" Canvas.Top="42"/>
        <TextBlock x:Name="Area2Box" Canvas.Left="10" TextWrapping="Wrap" Text="TextBlock" Canvas.Top="63"/>

        <Button Content="Otectomie" Canvas.Left="456" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Otectomie"/>
        <Button Content="Color Up" Canvas.Left="380" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ColorUpClick"/>

        <Button Content="Polygon Triangulate" Canvas.Left="530" Canvas.Top="10" Background="#FFFBFF00" HorizontalAlignment="Left" VerticalAlignment="Center" Click="PolyTriangulate"/>
        <Button Content="Reset" Canvas.Left="10" Canvas.Top="10" Click="Reset_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Width="46" Background="#FFFF6969"/>
        <Line Stroke="Aquamarine" Width="380" Height="240" X1="2"></Line>
        <Button Content="Convex Triangulate" Canvas.Left="658" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" Click="TR_Click" Background="#FFF597FF" Width="114"/>
        <Button Content="Triangulate Random Set" Canvas.Left="76" Canvas.Top="10" Click="TriangulateRandomPts" HorizontalAlignment="Left" VerticalAlignment="Center" Width="145" BorderBrush="#FFCEFF31" Background="#FF96FF9E"/>
        <Button Content="Area" Canvas.Left="333" Canvas.Top="10" Click="AreaClick" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Canvas>
</Window>
